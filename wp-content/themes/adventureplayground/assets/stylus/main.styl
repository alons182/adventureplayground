gris2 = #F5F5F5
naranja = #f05f1d
azul = #2d3891
cafe = #341713
*
	box-sizing border-box

body
	font-family 'Open Sans', sans-serif
	font-size 80%
	line-height 30px
	color gris
	background-color gris2
	



ul
	margin 0
	padding 0
	

a
	text-decoration none
	transition all .5s ease
	color verde2

h1
h2
h3
h4
h5
	margin-top 0
	font-family 'Tinos', serif
	font-weight normal
	
h1
	line-height 45px
	color naranja
h2
h3
	color verde2
img
	max-width 100%
	height auto

.hidden
	display none
.right
	right 0
.left
	left 0
.alignright
	float right
	margin-left 1rem
.alignleft
	float left
	margin-right 1rem
.wp-caption
	display	inline-block
	vertical-align top
.wp-caption-text
	font-size 13px
	margin-top -15px
.txt-center
	text-align center
.color 
	background-color verde
.dark
	background-color oscuro
.white
	background-color white
.transparent
	background-color transparent
.btn
	padding .5rem .8rem
	border-radius 6px
	display inline-block
	color white
	transition all .5s ease
	border 1px solid #229b60
	box-shadow 0 1px 1px #216e47
	
	&:hover
		background-color white
		border-color #d6d6d6
		box-shadow 0 1px 1px gris
		color gris

.inner
	max-width 1170px
	margin 0 auto
	position relative
	padding-left 1rem
	padding-right 1rem
	z-index 9
	
.top
	background-color verde
	height 50px
	text-align center
	z-index 0
	position relative
	
	&__social
		display inline-block
		vertical-align middle
		&__link
